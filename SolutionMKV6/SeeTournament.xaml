<Window x:Class="SolutionMKV6.SeeTournament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolutionMKV6"
        mc:Ignorable="d"
        Title="SeeTournament" Height="450" Width="800">
    <Grid Focusable="True">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="350,10,0,0" TextWrapping="Wrap" Text="See Tournaments" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" TextAlignment="Center"/>
        <DataGrid HorizontalAlignment="Left" Height="280" Margin="80,60,0,0" VerticalAlignment="Top" Width="320" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="500,60,0,0" VerticalAlignment="Top" Width="180" Height="40" Click="Button_Add"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="500,140,0,0" VerticalAlignment="Top" Width="180"  Height="40" Click="Button_Edit"/>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="500,220,0,0" VerticalAlignment="Top" Width="180" Height="40" Click="Button_Refresh"/>
        <Button Content="Export" HorizontalAlignment="Left" Margin="500,300,0,0" VerticalAlignment="Top" Width="180" Height="40" Click="Button_Export"/>

    </Grid>
</Window>
