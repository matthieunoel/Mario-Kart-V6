<Window x:Class="SolutionMKV6.AddTournament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolutionMKV6"
        mc:Ignorable="d"
        Title="AddTournament" Height="450" Width="800" Background="#FF7D7979">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="MonDataGrid" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="306" Background="Blue" AreRowDetailsFrozen="True" SelectionChanged="DataGrid_SelectionChanged" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pseudo"  Binding="{Binding Pseudo}"/>
                <DataGridComboBoxColumn Header="Personnage" x:Name="ListeKart" SelectedItemBinding="{Binding Personnage}" />
                <DataGridTextColumn Header="Kart"  Binding="{Binding Kart}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListBox HorizontalAlignment="Left" Margin="510,106,0,0" VerticalAlignment="Top" Width="180" Height="40">
            <ListBoxItem>
                Carotte
            </ListBoxItem>
            <ListBoxItem>
                carotte bleu
            </ListBoxItem>
        </ListBox>
        <ListBox HorizontalAlignment="Left" Margin="510,176,0,0" VerticalAlignment="Top" Width="180"  Height="40" Grid.RowSpan="2">
            <ListBoxItem>
                patate
            </ListBoxItem>
        </ListBox>
        <Label Content="Mode de jeu :" HorizontalAlignment="Left" Margin="426,106,0,0" VerticalAlignment="Top"/>
        <Label Content="   " HorizontalAlignment="Left" Margin="384,17,0,0" VerticalAlignment="Top"/>
        <Label Content="Nom du Tournoi :" HorizontalAlignment="Left" Margin="358,5,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="Nom_du_tournoi" Text="" Height="23" Margin="460,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Vitesse :" HorizontalAlignment="Left" Margin="456,176,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Avec IA :" HorizontalAlignment="Left" Margin="456,48.2,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Par Equipe :" HorizontalAlignment="Left" Margin="438,117.2,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <CheckBox HorizontalAlignment="Left" Margin="515,124.2,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <CheckBox HorizontalAlignment="Left" Margin="515,54.2,0,0" VerticalAlignment="Top" Grid.Row="1"/>

    </Grid>
</Window>